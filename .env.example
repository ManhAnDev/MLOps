# ============================================
# ML MONITORING - ENVIRONMENT CONFIGURATION
# ============================================
# Copy this file to .env and modify as needed
# Example: cp .env.example .env

# ==========================================
# USER CONFIGURATION
# ==========================================
# Your username (used for container naming to avoid conflicts)
USER=dongnd

# ==========================================
# POSTGRESQL CONFIGURATION
# ==========================================
POSTGRES_USER=mlflow
POSTGRES_PASSWORD=mlflow
POSTGRES_DB=mlflow
POSTGRES_PORT=5432

# ==========================================
# MINIO CONFIGURATION
# ==========================================
MINIO_ROOT_USER=minio
MINIO_ROOT_PASSWORD=minio123
MINIO_PORT=9000
MINIO_CONSOLE_PORT=9001
MINIO_BUCKET_NAME=mlflow-artifacts

# ==========================================
# MLFLOW CONFIGURATION
# ==========================================
MLFLOW_PORT=5000
MLFLOW_BACKEND_STORE_URI=postgresql://mlflow:mlflow@postgres:5432/mlflow
MLFLOW_DEFAULT_ARTIFACT_ROOT=s3://mlflow-artifacts
MLFLOW_S3_ENDPOINT_URL=http://minio:9000

# ==========================================
# MODEL API CONFIGURATION
# ==========================================
API_PORT=8000
MODEL_NAME=wine_quality_model
MODEL_STAGE=Production
# MODEL_STAGE options: Production, Staging, None

# ==========================================
# PROMETHEUS CONFIGURATION
# ==========================================
PROMETHEUS_PORT=9090
PROMETHEUS_RETENTION=30d

# ==========================================
# GRAFANA CONFIGURATION
# ==========================================
GRAFANA_PORT=3000
GRAFANA_ADMIN_USER=admin
GRAFANA_ADMIN_PASSWORD=admin
# IMPORTANT: Change this password in production!

# ==========================================
# AWS S3 CREDENTIALS (for MinIO)
# ==========================================
AWS_ACCESS_KEY_ID=minio
AWS_SECRET_ACCESS_KEY=minio123
MLFLOW_S3_IGNORE_TLS=true

# ==========================================
# OPTIONAL: AIRFLOW CONFIGURATION
# ==========================================
# Uncomment if using Airflow
# AIRFLOW_PORT=8080
# AIRFLOW_EXECUTOR=LocalExecutor
# AIRFLOW_LOAD_EXAMPLES=false

# ==========================================
# NETWORK CONFIGURATION
# ==========================================
NETWORK_NAME=monitoring

# ==========================================
# EVIDENTLY AI CONFIGURATION
# ==========================================
EVIDENTLY_PORT=8001
EVIDENTLY_REFERENCE_WINDOW=7d
EVIDENTLY_ANALYSIS_INTERVAL=1h
EVIDENTLY_DRIFT_THRESHOLD=0.1
EVIDENTLY_MIN_SAMPLES=100
